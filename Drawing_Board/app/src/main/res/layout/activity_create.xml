<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/create_lilout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/create_bound"
            android:padding="20dp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:fontFamily="@font/blackhansans_regular"
                    android:text="방 이름 : "
                    android:textColor="#3d65d3"
                    android:gravity="left|center_vertical"
                    android:textSize="35sp" />
                <EditText
                    android:id="@+id/roomname_et"
                    android:layout_width="0dp"
                    android:layout_weight=".55"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textColor="#3d65d3"
                    android:maxLength="10"
                    android:inputType="text"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:text="비밀번호 : "
                    android:textColor="#3d65d3"
                    android:gravity="left|center_vertical"
                    android:textSize="35sp"
                    android:fontFamily="@font/blackhansans_regular"/>
                <EditText
                    android:id="@+id/roompwd_et"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".55"
                    android:textColor="#3d65d3"
                    android:gravity="center"
                    android:maxLength="7"
                    android:inputType="numberPassword"
                    android:text=""
                    android:textSize="35sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:textColor="#3d65d3"
                    android:gravity="left|center_vertical"
                    android:text="인원수 : "
                    android:textSize="35sp"
                    android:fontFamily="@font/blackhansans_regular"/>
                <Button
                    android:id="@+id/four_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:onClick="selectPlayers"
                    android:textSize="28sp"
                    android:fontFamily="@font/kanit_bold"
                    android:background="#3d65d3"
                    android:layout_margin="3dp"
                    android:layout_weight=".15"/>
                <Button
                    android:id="@+id/five_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:onClick="selectPlayers"
                    android:textSize="28sp"
                    android:fontFamily="@font/kanit_bold"
                    android:background="#3d65d3"
                    android:layout_margin="3dp"
                    android:layout_weight=".15"/>
                <Button
                    android:id="@+id/six_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:onClick="selectPlayers"
                    android:textSize="28sp"
                    android:fontFamily="@font/kanit_bold"
                    android:background="#3d65d3"
                    android:layout_margin="3dp"
                    android:layout_weight=".15"/>
                <Button
                    android:id="@+id/seven_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:onClick="selectPlayers"
                    android:textSize="28sp"
                    android:fontFamily="@font/kanit_bold"
                    android:background="#3d65d3"
                    android:layout_margin="3dp"
                    android:layout_weight=".15"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="1">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".13"/>
                <Button
                    android:id="@+id/create_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:padding="5dp"
                    android:text="방 만들기"
                    android:background="#3d65d3"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/blackhansans_regular"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".12"/>
                <Button
                    android:id="@+id/back_create"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:layout_above="@id/create_lilout"
                    android:layout_alignRight="@id/create_lilout"
                    android:background="@drawable/back"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>